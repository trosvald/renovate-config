{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchDatasources": [
                "terraform-provider"
            ],
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "ignoreTests": true
        }
    ]
}